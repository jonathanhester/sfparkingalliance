= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :code
    %br/
    = f.text_field :code
  .field
    = f.label :license
    %br/
    = f.text_field :license
  .field
    = f.label :address
    %br/
    = f.text_area :address
  .actions
    = f.submit
