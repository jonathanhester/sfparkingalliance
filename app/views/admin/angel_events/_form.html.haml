= form_for([:admin, @angel_event]) do |f|
  - if @angel_event.errors.any?
    #error_explanation
      %h2
        = pluralize(@angel_event.errors.count, "error")
        prohibited this angel_event from being saved:
      %ul
        - @angel_event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :code
    %br/
    = f.text_field :code
  .field
    = f.label :status
    %br/
    = f.text_field :status
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .actions
    = f.submit
